{
  "$schema": "./node_modules/@garment/workspace/schemas/config.schema.json",
  "presets": {
    "ts-package": {
      "tasks": {
        "build": {
          "runner": "ts",
          "buildDependencies": true,
          "input": "{{projectDir}}/src/**/*.ts?(x)",
          "output": "{{projectDir}}/lib"
        }
      }
    }
  },
  "projects": {
    "core": {
      "path": "packages/core",
      "extends": ["ts-package"]
    },
    "react": {
      "path": "packages/react",
      "extends": ["ts-package"]
    },
    "sandbox-script": {
      "path": "packages/sandbox-script",
      "tasks": {
        "build": {
          "runner": "bin",
          "buildDependencies": true,
          "options": {
            "args": "webpack",
            "stream": true
          }
        },
        "dev": [
          {
            "runner": "bin",
            "buildDependencies": {
              "task": "build",
              "watch": true
            },
            "options": {
              "args": "webpack --watch",
              "stream": true,
              "longRunning": true
            }
          }
        ]
      }
    }
  },
  "schematics": [],
  "experimentalCacheSubscriptions": true
}
